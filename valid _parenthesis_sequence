class Solution {
public:
    string minRemoveToMakeValid(string s) {
        int n = s.size();
        stack<int> st;
        string str = "";
        for(int i = 0; i< n; i++){
            if(s[i] == '(') st.push(i);
            else if(s[i] == ')') {
                if(st.empty()){
                    s[i] ='@';
                }
                else st.pop();

            }
        }

        while(!st.empty()){
            s[st.top()] = '@';
            st.pop();
        }

        for(int i = 0  ; i< n; i++){
            if(s[i] == '@') continue;
            else str += s[i];
        }
        return str;
    }
};
