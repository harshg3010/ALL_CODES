/*

time complexity -
  
  1. avg case  -- O(nlogn)
  
  2. worst case -- O(n^2)     --> this case happens when pivot element chosen is largest element. 
  
 space complexity
 
 1. O(1)


*/


#include<bits/stdc++.h>
using namespace std;

int partition(vector<int> &arr, int start, int end){
    int index = start -1;
    int pivot = arr[end];
    
    /// make all elements smaller then pivot to its left
    
    for(int i = start; i< end; i++){
        if(arr[i] <= pivot){
            index++;
            swap(arr[index], arr[i]);
        }
    }
    
    index++;
    swap(arr[index], arr[end]);
    return index;
}

void quickSort(vector<int> &arr, int start, int end){
    if(start < end){
        int pivotindex = partition(arr, start, end);
        quickSort(arr, start, pivotindex-1); // left half
        quickSort(arr, pivotindex+1, end);
    }
}

int main(){

    vector<int> arr = {12, 31, 35, 8, 32, 17};
    quickSort(arr, 0, arr.size() -1); 
    
    for(int i: arr){
        cout << i << " " ;
    }
    return 0;
}
