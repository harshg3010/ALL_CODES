class Solution {
public:
    int minStoneSum(vector<int>& piles, int k) {
        priority_queue<int> pq;
        int n = piles.size();
        int ans = 0;
        for(int i = 0; i< n; i++){
            pq.push(piles[i]);
        }
        while(k--){
            int top = pq.top();
            pq.pop();
            top = top - top/2;
            pq.push(top);
        }
        while(!pq.empty()){
            ans += pq.top();
            pq.pop();
        }
        return ans;
    }
