//  use stack for storing the prevous high prices[i](index) of the current prices[i].

#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
    vector<int> res;
    stack<int> st;
    vector<int> ans = {100, 80, 60, 70, 60, 75, 85};
    int n = ans.size();
   
    for(int i = 0; i< n; i++){
        while(!st.empty() && ans[st.top()] <= ans[i]){
            st.pop();
        }
        if(st.empty()) res.push_back(i+1);
        else res.push_back(i - st.top());
        st.push(i);
    }
    
    cout << "The stock span problem answer is : "  << endl;
    
    for(int i = 0; i < n; i++){
        cout << res[i] << " ";
    }
    
    return 0;
}
