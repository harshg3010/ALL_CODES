class Solution {
public:
    int minIncrementForUnique(vector<int>& nums) {
        if(nums.size() == 1) return 0;
        int ans = 0;
        sort(nums.begin(), nums.end());
        for(int i = 1; i< nums.size(); i++){
            if(nums[i] <= nums[i-1]){
                ans += abs(nums[i] - nums[i-1]) +1;
                nums[i] += abs(nums[i] - nums[i-1]) +1;
            }
        }

        return ans;
        
    }
};
